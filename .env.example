# Окружение: development | production (в production обязателен свой JWT_SECRET_KEY)
ENV=development

# Database (SQLite по умолчанию; для продакшена — PostgreSQL)
DATABASE_URL=sqlite:///./schedule.db

# JWT (обязательно сменить в продакшене!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# Push Notifications (VAPID). Сгенерировать: python scripts/generate_vapid_keys.py
VAPID_PRIVATE_KEY=
VAPID_PUBLIC_KEY=
VAPID_CLAIM_EMAIL=mailto:admin@mxt223.com

# Sentry (опционально)
SENTRY_DSN=

# CORS (опционально; через запятую, например https://mxt223.com)
# Пусто = разрешены все origins (удобно для разработки)
CORS_ORIGINS=

# Уровень логов: DEBUG, INFO, WARNING, ERROR (по умолчанию INFO)
# LOG_LEVEL=INFO

# Кэш API (секунды). Таймаут подключения к БД (PostgreSQL)
# CACHE_TTL_SECONDS=300
# DATABASE_CONNECT_TIMEOUT=10

# Rate limit: запросов на /api/login и /api/refresh за окно (секунды)
# RATE_LIMIT_REQUESTS=5
# RATE_LIMIT_WINDOW_SECONDS=60
